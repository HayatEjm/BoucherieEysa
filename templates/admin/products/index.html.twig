{% extends 'admin/admin_base.html.twig' %}
{% block title %}Produits{% endblock %}

{% block body %}
<div class="admin-header">
  <h1><i class="fas fa-boxes"></i> Gestion des produits</h1>
  <p class="subtitle">G√©rez votre catalogue et surveillez vos stocks</p>
</div>

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 32px; padding: 24px; background: var(--admin-white); border-radius: var(--admin-radius); box-shadow: var(--admin-shadow-sm);">
  <div>
    <h3 style="margin: 0 0 4px 0; color: var(--admin-primary);">{{ products|length }} produit{{ products|length > 1 ? 's' : '' }} au total</h3>
    <p style="margin: 0; color: #6b7280;">Derni√®re mise √† jour : {{ "now"|date("d/m/Y √† H:i") }}</p>
  </div>
  <a href="{{ path('admin_products_add') }}" class="btn btn-success">
    <i class="fas fa-plus"></i> Nouveau produit
  </a>
</div>

<div style="background: var(--admin-white); border-radius: var(--admin-radius); box-shadow: var(--admin-shadow-sm); overflow: hidden;">
  <table class="admin-table" style="margin-top: 0;">
    <thead>
      <tr>
        <th style="width: 80px;">Image</th>
        <th>Produit</th>
        <th style="width: 120px;">Cat√©gorie</th>
        <th style="width: 120px;">Prix</th>
        <th style="width: 100px;">Stock actuel</th>
        <th style="width: 100px;">Seuil alerte</th>
        <th style="width: 120px;">Statut</th>
        <th style="width:260px;">Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for p in products %}
        <tr>
          <td>
            {% if p.image %}
              <img src="{{ asset('images/' ~ p.image) }}" alt="{{ p.name }}" style="width:50px;height:50px;object-fit:cover;border-radius:8px;">
            {% else %}
              <div style="width:50px;height:50px;background:#f0f0f0;border-radius:8px;display:flex;align-items:center;justify-content:center;color:#999;">
                <i class="fas fa-image"></i>
              </div>
            {% endif %}
          </td>
          <td>
            <div class="item-info">
              <div class="item-title">{{ p.name }}</div>
              {% if p.description %}
                <div class="item-subtitle">{{ p.description|length > 60 ? p.description|slice(0,60) ~ '‚Ä¶' : p.description }}</div>
              {% endif %}
            </div>
          </td>
          <td>
            {% if p.category %}
              <span class="badge badge-secondary">{{ p.category.name }}</span>
            {% else %}
              <span class="badge badge-warning">Aucune cat√©gorie</span>
            {% endif %}
          </td>
          <td><strong>{{ p.price|number_format(2, ',', ' ') }}‚Ç¨</strong></td>
          <td style="text-align: center;">
            <strong style="font-size: 1.1rem; color: var(--admin-primary);">{{ p.stock }}</strong>
          </td>
          <td style="text-align: center;">
            {% if p.alertThreshold %}
              <span class="badge badge-secondary" style="font-size: 0.9rem;">{{ p.alertThreshold }}</span>
            {% else %}
              <span style="color: #9ca3af; font-size: 0.85rem;">‚Äî</span>
            {% endif %}
          </td>
          <td style="text-align: center;">
            {% set status = p.stockStatus %}
            {% if status == 'critical' %}
              <span class="badge badge-danger" style="padding: 6px 12px;">
                <i class="fas fa-exclamation-circle"></i> Critique
              </span>
            {% elseif status == 'low' %}
              <span class="badge badge-warning" style="padding: 6px 12px;">
                <i class="fas fa-exclamation-triangle"></i> Faible
              </span>
            {% else %}
              <span class="badge badge-success" style="padding: 6px 12px;">
                <i class="fas fa-check-circle"></i> Bon
              </span>
            {% endif %}
          </td>
          <td>
            <div style="display: flex; gap: 8px; align-items: center; justify-content: center;">
              <button class="btn btn-sm btn-info" 
                      onclick="openStockModal({{ p.id }}, '{{ p.name|e('js') }}', {{ p.stock }}, {{ p.alertThreshold ?? 'null' }})"
                      title="G√©rer le stock">
                <i class="fas fa-box"></i> Stock
              </button>
              <a href="{{ path('admin_products_edit', {id: p.id}) }}" class="btn btn-sm btn-primary" title="Modifier le produit">
                <i class="fas fa-edit"></i>
              </a>
              <form action="{{ path('admin_products_delete', {id: p.id}) }}" method="post" 
                    onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce produit ?');"
                    style="display:inline;">
                <button class="btn btn-sm btn-danger" title="Supprimer le produit">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </div>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="8" style="text-align:center;padding:48px;color:#6b7280;">
            <i class="fas fa-box-open" style="font-size: 3rem; margin-bottom: 16px; opacity: 0.5;"></i>
            <p style="margin: 0; font-size: 1.1rem; font-weight: 600;">Aucun produit pour le moment</p>
            <p style="margin: 8px 0 16px 0; font-size: 0.9rem;">Commencez par ajouter votre premier produit</p>
            <a href="{{ path('admin_products_add') }}" class="btn btn-success">
              <i class="fas fa-plus"></i> Ajouter un produit
            </a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>

{% if products|length > 0 %}
<div style="margin-top: 32px; text-align: center; padding: 24px; background: var(--admin-gray-50); border-radius: var(--admin-radius); border: 2px dashed var(--admin-gray-200);">
  <p style="margin: 0 0 16px 0; color: #6b7280;">
    <i class="fas fa-lightbulb"></i> 
    <strong>Conseil :</strong> Surveillez r√©guli√®rement vos stocks pour √©viter les ruptures
  </p>
  <a href="{{ path('admin_products_add') }}" class="btn btn-success">
    <i class="fas fa-plus"></i> Ajouter un autre produit
  </a>
</div>
{% endif %}

<!-- Modal Gestion Stock -->
<div id="stockModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.5); z-index:9999; align-items:center; justify-content:center;">
  <div style="background:white; border-radius:12px; padding:32px; max-width:500px; width:90%; box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1), 0 10px 10px -5px rgba(0,0,0,0.04);">
    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:24px; border-bottom:2px solid var(--admin-gray-100); padding-bottom:16px;">
      <h3 style="margin:0; color:var(--admin-primary); font-size:1.5rem;">
        <i class="fas fa-box"></i> Gestion du stock
      </h3>
      <button onclick="closeStockModal()" style="background:none; border:none; font-size:1.5rem; color:#9ca3af; cursor:pointer; padding:0; width:32px; height:32px; display:flex; align-items:center; justify-content:center; border-radius:50%; transition:all 0.2s;">
        <i class="fas fa-times"></i>
      </button>
    </div>
    
    <div id="stockModalContent">
      <div style="background:var(--admin-gray-50); padding:16px; border-radius:8px; margin-bottom:24px;">
        <p style="margin:0; font-weight:600; color:var(--admin-text-primary);" id="modalProductName"></p>
      </div>

      <div style="display:grid; grid-template-columns:1fr 1fr; gap:16px; margin-bottom:24px;">
        <div>
          <label style="display:block; margin-bottom:8px; font-weight:600; color:var(--admin-text-secondary); font-size:0.9rem;">Stock actuel</label>
          <div style="display:flex; gap:8px; align-items:center;">
            <button onclick="adjustStock(-1)" class="btn btn-sm btn-outline-secondary" style="width:40px; height:40px; font-size:1.2rem; padding:0;">
              <i class="fas fa-minus"></i>
            </button>
            <input type="number" id="modalStockValue" min="0" 
                   style="flex:1; padding:10px; border:2px solid var(--admin-gray-300); border-radius:8px; text-align:center; font-size:1.2rem; font-weight:700; color:var(--admin-primary);">
            <button onclick="adjustStock(1)" class="btn btn-sm btn-outline-secondary" style="width:40px; height:40px; font-size:1.2rem; padding:0;">
              <i class="fas fa-plus"></i>
            </button>
          </div>
        </div>
        
        <div>
          <label style="display:block; margin-bottom:8px; font-weight:600; color:var(--admin-text-secondary); font-size:0.9rem;">Seuil d'alerte</label>
          <input type="number" id="modalAlertThreshold" min="0" placeholder="Ex: 5"
                 style="width:100%; padding:10px; border:2px solid var(--admin-gray-300); border-radius:8px; text-align:center; font-size:1.1rem; font-weight:600;">
          <small style="display:block; margin-top:4px; color:#6b7280; font-size:0.8rem;">Vous serez alert√© si le stock passe en dessous</small>
        </div>
      </div>

      <div style="margin-bottom:24px;">
        <label style="display:block; margin-bottom:8px; font-weight:600; color:var(--admin-text-secondary); font-size:0.9rem;">
          Raison de la modification (optionnel)
        </label>
        <select id="modalStockReason" style="width:100%; padding:10px; border:2px solid var(--admin-gray-300); border-radius:8px; font-size:1rem;">
          <option value="">-- S√©lectionnez une raison --</option>
          <option value="restock">üì¶ R√©approvisionnement</option>
          <option value="sale">üõí Vente en magasin</option>
          <option value="inventory">üìã Inventaire / Correction</option>
          <option value="waste">üóëÔ∏è Perte / Casse</option>
          <option value="other">‚úèÔ∏è Autre</option>
        </select>
      </div>

      <div style="display:flex; gap:12px; justify-content:flex-end;">
        <button onclick="closeStockModal()" class="btn btn-secondary">
          <i class="fas fa-times"></i> Annuler
        </button>
        <button onclick="saveStock()" class="btn btn-success">
          <i class="fas fa-save"></i> Enregistrer
        </button>
      </div>
    </div>
  </div>
</div>

<script>
let currentProductId = null;

function openStockModal(productId, productName, currentStock, alertThreshold) {
  currentProductId = productId;
  document.getElementById('modalProductName').textContent = productName;
  document.getElementById('modalStockValue').value = currentStock;
  document.getElementById('modalAlertThreshold').value = alertThreshold || '';
  document.getElementById('modalStockReason').value = '';
  document.getElementById('stockModal').style.display = 'flex';
}

function closeStockModal() {
  document.getElementById('stockModal').style.display = 'none';
  currentProductId = null;
}

function adjustStock(delta) {
  const input = document.getElementById('modalStockValue');
  const newValue = Math.max(0, parseInt(input.value) + delta);
  input.value = newValue;
}

function saveStock() {
  if (!currentProductId) return;
  
  const stock = parseInt(document.getElementById('modalStockValue').value);
  const alertThreshold = document.getElementById('modalAlertThreshold').value;
  const reason = document.getElementById('modalStockReason').value;
  
  if (isNaN(stock) || stock < 0) {
    alert('Veuillez entrer un stock valide');
    return;
  }
  
  fetch(`/admin/products/${currentProductId}/update-stock`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({
      stock: stock,
      alertThreshold: alertThreshold ? parseInt(alertThreshold) : null,
      reason: reason
    })
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload();
    } else {
      alert(data.error || 'Erreur lors de la mise √† jour');
    }
  })
  .catch(error => {
    console.error('Erreur:', error);
    alert('Erreur lors de la mise √† jour du stock');
  });
}

// Fermer le modal en cliquant en dehors
document.getElementById('stockModal')?.addEventListener('click', function(e) {
  if (e.target === this) {
    closeStockModal();
  }
});
</script>
{% endblock %}
