{# Template pour la page de connexion #}
{% extends 'base.html.twig' %}

{% block title %}Connexion - Boucherie Eysa{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="auth-card">
            {# En-tête du formulaire #}
            <div class="auth-header">
                <h1>Se connecter</h1>
                <p>Accédez à votre compte Boucherie Eysa</p>
            </div>

            {# Affichage des erreurs s'il y en a #}
            {% if error %}
                <div class="alert alert-error">
                    <i class="fas fa-exclamation-triangle"></i>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {# Formulaire de connexion #}
            <form method="post" class="auth-form">
                {# Champ email #}
                <div class="form-group">
                    <label for="username">
                        <i class="fas fa-envelope"></i>
                        Adresse email
                    </label>
                    <input 
                        type="email" 
                        value="{{ last_username }}" 
                        name="_username" 
                        id="username" 
                        class="form-control"
                        required 
                        autocomplete="email"
                        placeholder="votre@email.com"
                    >
                </div>

                {# Champ mot de passe #}
                <div class="form-group">
                    <label for="password">
                        <i class="fas fa-lock"></i>
                        Mot de passe
                    </label>
                    <input 
                        type="password" 
                        name="_password" 
                        id="password" 
                        class="form-control"
                        required 
                        autocomplete="current-password"
                        placeholder="Votre mot de passe"
                    >
                    <div class="form-help">
                        <a href="{{ path('password_reset_request') }}" class="forgot-password-link">
                            <i class="fas fa-key"></i>
                            Mot de passe oublié ?
                        </a>
                    </div>
                </div>

                {# Champ caché pour la sécurité CSRF #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {# Bouton de connexion #}
                <button type="submit" class="btn btn-primary btn-full">
                    <i class="fas fa-sign-in-alt"></i>
                    Se connecter
                </button>
            </form>

            {# Liens utiles #}
            <div class="auth-links">
                <p>Pas encore de compte ?</p>
                <a href="{{ path('app_signup') }}" class="btn btn-outline">
                    <i class="fas fa-user-plus"></i>
                    Créer un compte
                </a>
            </div>

            {# Retour à l'accueil #}
            <div class="auth-back">
                <a href="{{ path('app_home') }}" class="back-link">
                    <i class="fas fa-arrow-left"></i>
                    Retour à l'accueil
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{# CSS spécifique pour l'authentification #}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/auth.css') }}">
{% endblock %}
