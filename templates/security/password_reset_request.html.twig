{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Boucherie Eysa{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="auth-card">
            {# En-tête du formulaire #}
            <div class="auth-header">
                <h1><i class="fas fa-key"></i> Mot de passe oublié</h1>
                <p>Nous allons vous aider à récupérer votre accès</p>
            </div>

            {# Affichage des messages flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success" style="margin: 1rem 1.5rem 0;">
                    <i class="fas fa-check-circle"></i>
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-error" style="margin: 1rem 1.5rem 0;">
                    <i class="fas fa-exclamation-triangle"></i>
                    {{ message }}
                </div>
            {% endfor %}

            {# Formulaire de demande #}
            <form method="post" class="auth-form" novalidate>
                <div class="form-group">
                    {{ form_label(form.email, 'Adresse email', {
                        'label_attr': {
                            'class': 'form-label'
                        }
                    }) }}
                    {{ form_widget(form.email, {
                        'attr': {
                            'class': 'form-control form-control-lg',
                            'placeholder': 'votre@email.com'
                        }
                    }) }}
                    <div class="form-help">
                        <i class="fas fa-info-circle"></i>
                        Nous vous enverrons un lien sécurisé pour réinitialiser votre mot de passe
                    </div>
                    {{ form_errors(form.email) }}
                </div>

                <button type="submit" class="btn btn-primary btn-full">
                    <i class="fas fa-paper-plane"></i>
                    Envoyer le lien de réinitialisation
                </button>
                
                {# Afficher les champs cachés sans le bouton submit par défaut #}
                {% do form.submit.setRendered %}
                {{ form_rest(form) }}
            </form>

            {# Liens utiles #}
            <div class="auth-links">
                <p>Vous vous souvenez de votre mot de passe ?</p>
                <a href="{{ path('app_login') }}" class="btn btn-outline">
                    <i class="fas fa-sign-in-alt"></i>
                    Se connecter
                </a>
            </div>

            {# Retour à l'accueil #}
            <div class="auth-back">
                <a href="{{ path('app_home') }}" class="back-link">
                    <i class="fas fa-home"></i>
                    Retour à l'accueil
                </a>
            </div>
        </div>
    </div>
{% endblock %}