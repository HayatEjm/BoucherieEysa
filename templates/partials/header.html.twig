<header class="main-header">
	{# Logo en haut √† gauche, au-dessus de tout #}
	<a class="brand-badge" href="{{ path('app_home') }}" aria-label="Accueil Boucherie EYSA">
		<img src="{{ asset('images/logo_web.png') }}" alt="Boucherie EYSA" width="96" height="96" decoding="async" />
	</a>
	
	<div class="logo-container">
		<div class="logo">
			<a href="{{ path('app_home') }}">EYSA BOUCHERIE</a>
		</div>
	</div>

	<div class="header-container">
		<nav class="nav-links">
			<ul>
				<li>
					<a href="{{ path('app_home') }}">ACCUEIL</a>
				</li>

				{# üîΩ MOUNT POINT VUE 3 ICI - POUR DropdownMenu.vue #}
				<li id="vue-dropdown-menu" {% if categoriesJson is defined %} 
				data-categories='{{ categoriesJson|json_encode|e("html_attr") }}' {% endif %}>
					<a href="#">NOS PRODUITS</a>
				</li>


				<li>
					<a href="{{ path('app_click_collect') }}">CLICK & COLLECT</a>
				</li>
				<li>
