				</li>
			</ul>
		</nav>

		<div class="header-icons">
			{# Gestion intelligente du lien "Mon Compte" #}
			{% if is_granted('ROLE_USER') %}
				{# Utilisateur connect√© - Lien vers son compte #}
				<a href="{{ path('app_account') }}" class="icon-link">
					<i class="fa-solid fa-user" aria-hidden="true"></i>
					<span class="label">MON COMPTE</span>
				</a>
			{% else %}
				{# Utilisateur pas connect√© - Lien vers la connexion #}
				<a href="{{ path('app_login') }}" class="icon-link">
					<i class="fa-solid fa-user" aria-hidden="true"></i>
					<span class="label">CONNEXION</span>
				</a>
			{% endif %}

			<a href="{{ path('app_cart_index') }}" class="icon-link cart-icon-container" aria-label="Panier" data-tooltip="Voir mon panier">
				<i class="fa-solid fa-cart-shopping cart-icon" aria-hidden="true"></i>
				<span id="cart-badge" data-count="0" aria-label="0 articles dans le panier">0</span>
			</a>

