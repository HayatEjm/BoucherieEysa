{% extends 'base.html.twig' %}

{% block title %}
    {{ category.name }} - EYSA BOUCHERIE
{% endblock %}

{% block body %}
<div class="products-container">
    <div class="page-header">
        <div class="breadcrumb">
            <a href="{{ path('app_category_index') }}">
                <i class="fa-solid fa-arrow-left" aria-hidden="true"></i> Retour aux catégories
            </a>
            <span class="separator">></span>
            <span class="current">{{ category.name }}</span>
        </div>
        <h1>{{ category.name }}</h1>
        <p class="subtitle">Découvrez notre sélection de {{ category.name|lower }}</p>
    </div>

    {% if products is not empty %}
        <div class="products-grid">
            {% for product in products %}
                <div class="product-card {% if not product.inStock %}out-of-stock{% endif %}">
                    <div class="product-image">
                        {% if product.image %}
                            <img src="{{ asset('images/' ~ product.image) }}" alt="{{ product.name }}">
                        {% else %}
                            <img src="{{ asset('images/fallback.jpg') }}" alt="{{ product.name }}">
                        {% endif %}
                        
                        {# Badge rupture de stock #}
                        {% if not product.inStock %}
                            <div class="stock-badge out-of-stock">
                                <i class="fas fa-times-circle"></i>
                                Rupture de stock
                            </div>
                        {% elseif product.lowStock %}
                            <div class="stock-badge low-stock">
                                <i class="fas fa-exclamation-triangle"></i>
                                Stock faible
                            </div>
                        {% endif %}
                    </div>
                    <div class="product-info">
                        <h3 class="product-name">{{ product.name }}</h3>
                        <p class="product-description">{{ product.description }}</p>
                        <div class="product-price">
                            <span class="price">{{ product.price|number_format(2, ',', ' ') }}€</span>
                            <span class="unit">/ {{ product.unit }}</span>
                        </div>
                        <div class="product-actions">
                            {# Toujours permettre de voir les détails #}
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn-eysa btn-eysa-primary">
                                <i class="fa-solid fa-eye" aria-hidden="true"></i> Voir détails & Commander 
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="no-products">
            <i class="fa-solid fa-box-open" aria-hidden="true"></i>
            <h3>Aucun produit trouvé</h3>
            <p>Il n'y a pas de produits dans cette catégorie pour le moment.</p>
            <a href="{{ path('app_category_index') }}" class="btn-eysa btn-eysa-primary">
                <i class="fa-solid fa-arrow-left" aria-hidden="true"></i> Retour aux catégories
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {#
        Toute la logique JS de gestion des produits et du panier est désormais externalisée dans
        assets/js/category_products.js (importé via assets/app.js).
        Ce template ne contient plus aucun code JS inline, pour respecter le MVC et garantir la maintenabilité.
    #}
{% endblock %}
