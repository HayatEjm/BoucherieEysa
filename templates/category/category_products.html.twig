{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - EYSA BOUCHERIE{% endblock %}

{% block body %}
<div class="products-container">
    <div class="page-header">
        <h1>{{ category.name }}</h1>
        <p class="subtitle">Découvrez notre sélection de {{ category.name|lower }}</p>
        
        <div class="breadcrumb">
            <a href="{{ path('app_category_index') }}">
                <i class="fa-solid fa-arrow-left" aria-hidden="true"></i> Retour aux catégories
            </a>
        </div>
    </div>

    {% if products is not empty %}
        <div class="products-grid">
            {% for product in products %}
                <div class="product-card">
                    <div class="product-image">
                        {% if product.image %}
                            <img src="{{ asset('images/' ~ product.image) }}" alt="{{ product.name }}">
                        {% else %}
                            <img src="{{ asset('images/fallback.jpg') }}" alt="{{ product.name }}">
                        {% endif %}
                    </div>
                    
                    <div class="product-info">
                        <h3 class="product-name">{{ product.name }}</h3>
                        {% if product.description %}
                            <p class="product-description">{{ product.description }}</p>
                        {% endif %}
                        
                        <div class="product-price">
                            <span class="price">{{ product.price }}€</span>
                            <span class="unit">/ {{ product.unit }}</span>
                        </div>
                        
                        {% if product.stock is not null %}
                            <div class="product-stock">
                                <i class="fa-solid fa-box" aria-hidden="true"></i>
                                <span>Stock : {{ product.stock }}</span>
                            </div>
                        {% endif %}
                        
                        <div class="product-actions">
                            <button class="btn btn-primary" disabled>
                                <i class="fa-solid fa-eye" aria-hidden="true"></i> Voir détails
                            </button>
                            <button class="btn btn-cart" onclick="addToCart({{ product.id }})">
                                <i class="fa-solid fa-cart-plus" aria-hidden="true"></i> Ajouter au panier
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="no-products">
            <i class="fa-solid fa-box-open" aria-hidden="true"></i>
            <h3>Aucun produit disponible</h3>
            <p>Nous n'avons pas de produits dans la catégorie "{{ category.name }}" pour le moment.</p>
            <a href="{{ path('app_category_index') }}" class="btn btn-primary">
                <i class="fa-solid fa-arrow-left" aria-hidden="true"></i> Retour aux catégories
            </a>
        </div>
    {% endif %}
</div>

